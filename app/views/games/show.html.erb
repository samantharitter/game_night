<% @game = Game.find(params[:id])%>

<div class="row">

  <div class="col-md-6">
    <h1><%= @game.name %></h1>
    Referee: <%= @game.referee %>
    <br/><br/>
  </div>

  <div class="col-md-5">
    <br/>
    <a href="/plays/new?game_id=<%= @game[:id]%>" class="btn btn-primary btn-lg pull-right">Play!</a>
  </div>

  <div class="col-md-1">
  </div>
</div>

<div>

  <div class="row">
    <div class="col-md-1">Rank</div>
    <div class="col-md-1">Score</div>
    <div class="col-md-1">Icon</div>
    <div class="col-md-3">Name</div>
    <div class="col-md-6">Team</div>
  </div>

<% i = 0 %>
<% @players.each do |player| %>
  <div class="row">

    <div class="col-md-1">
      <%= i += 1 %>
    </div>

    <div class="col-md-1">
      <%= @game.score(player[:id]) %>
    </div>

    <div class="col-md-1">
      <!-- this is for an image /-->
    </div>

    <div class="col-md-3">
      <%= player.fullname %>
    </div>

    <div class="col-md-6">
      <!-- this is for team icon /-->
    </div>

  </div>
<% end %>
</div>
